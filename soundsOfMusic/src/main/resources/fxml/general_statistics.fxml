<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.stage.Screen?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.GeneralStatisticsController"
      prefHeight="400.0" prefWidth="600.0">

    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen" />
    </fx:define>

    <Label fx:id="description" text="Very clever text describing what is happenning on this tab"
           GridPane.rowIndex="0" GridPane.columnIndex="0">
        <padding>
            <Insets top="15" right="15" bottom="15" left="5"/>
        </padding>
    </Label>

    <TableView fx:id="frequencyTable" prefHeight="${screen.visualBounds.height}">
        <columns>
            <TableColumn text="Chord" fx:id="chord"/>
            <TableColumn text="Frequency" fx:id="frequency"/>
        </columns>
    </TableView>
    <ImageView fx:id="graph" GridPane.rowIndex="2" GridPane.columnIndex="0"/>

</VBox>

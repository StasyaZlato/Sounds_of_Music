<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="controllers.GeneralStatisticsController"
          prefHeight="400.0" prefWidth="600.0">
    <Text fx:id="description" text="Very clever text describing what is happenning on this tab"
          GridPane.rowIndex="0" GridPane.columnIndex="0"/>

    <TableView fx:id="frequencyTable"
    GridPane.rowIndex="1" GridPane.columnIndex="0">
        <columns>
            <TableColumn text="Chord" fx:id="chord" />
            <TableColumn text="Frequency" fx:id="frequency" />
        </columns>
    </TableView>

    <ScrollPane fx:id="scrollFiles" prefWidth="600" managed="false"
        GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.rowSpan="2">
        <ListView fx:id="files" prefWidth="600"/>
    </ScrollPane>

    <ImageView fx:id="graph" GridPane.rowIndex="2" GridPane.columnIndex="0"/>

</GridPane>
